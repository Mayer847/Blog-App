<h1>Welcome to the Posts Page</h1>
<p>This is where your posts will be displayed.</p>
<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <p>Tags: <%= post.tags %></p>
    <p>Author: <%= post.user.name %></p>
    <p>Comments:</p>
    <% post.comments.each do |comment| %>
      <div>
        <p><%= comment.body %></p>
        <p>Comment by: <%= comment.user.name %></p>
      </div>
    <% end %>
  </div>
<% end %>
